<div class="card card-body p-4 rounded-0 bg-dark text-white">
    <h3>Add A Task</h3>
    <form action='/tasks/add' method='POST'>
        <div>
            <label for='title'>Write a title: </label>
            <input type='text' name='title' placeholder='Title' id='title'
                class="form-control rounded-0 bg-dark text-white" required />
        </div>
        <div>
            <label for='description'>Description</label>
            <textarea name='description' placeholder='Description' id='description'
                class="form-control rounded-0 bg-dark text-white" required></textarea>
        </div>
        <button class="btn btn-outline-danger form-control btn-bg mt-2">Add</button>
    </form>
</div>